set -o errexit

git push origin master

sudo docker-compose build
sudo docker-compose run app jekyll build --incremental
sudo docker-compose run app linkchecker _site

rsync \
  --archive \
  --verbose \
  --compress \
  --delete \
  --rsh=ssh \
  _site/ \
  benjaminoakes.com:~/jekyll.benjaminoakes.com/
